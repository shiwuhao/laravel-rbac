{
  "openapi": "3.0.3",
  "info": {
    "title": "Laravel RBAC API",
    "version": "2.0.0",
    "description": "RBAC 接口文档（Sanctum Bearer，SPA: element-plus）。所有路径均以 /api/rbac 为前缀。"
  },
  "servers": [
    { "url": "/api/rbac", "description": "RBAC API Prefix" }
  ],
  "tags": [
    { "name": "Roles", "description": "角色管理" },
    { "name": "Permissions", "description": "权限管理" },
    { "name": "DataScopes", "description": "数据范围管理" },
    { "name": "Users", "description": "用户权限管理" },
    { "name": "UserPermissions", "description": "用户权限查询" }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "Sanctum"
      }
    },
    "schemas": {
      "Pagination": {
        "type": "object",
        "properties": {
          "current_page": { "type": "integer" },
          "data": { "type": "array", "items": { "type": "object" } },
          "per_page": { "type": "integer" },
          "total": { "type": "integer" }
        }
      },
      "Role": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "name": { "type": "string" },
          "slug": { "type": "string" },
          "description": { "type": "string" },
          "guard_name": { "type": "string" },
          "permissions": { "type": "array", "items": { "$ref": "#/components/schemas/Permission" } }
        }
      },
      "Permission": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "name": { "type": "string" },
          "slug": { "type": "string" },
          "resource": { "type": "string" },
          "action": { "type": "string" },
          "guard_name": { "type": "string" },
          "resource_type": { "type": "string" },
          "resource_id": { "type": "integer" }
        }
      },
      "DataScope": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "name": { "type": "string" },
          "slug": { "type": "string" },
          "description": { "type": "string" },
          "type": { "type": "string", "enum": ["all","organization","department","personal","custom","department_and_sub","only_self"] },
          "config": { "type": "object" },
          "constraint": { "type": "string", "nullable": true }
        }
      },
      "AssignIdsReplace": {
        "type": "object",
        "properties": {
          "permission_ids": { "type": "array", "items": { "type": "integer" } },
          "role_ids": { "type": "array", "items": { "type": "integer" } },
          "data_scope_ids": { "type": "array", "items": { "type": "integer" } },
          "replace": { "type": "boolean" }
        }
      },
      "InstancePermissionSingle": {
        "type": "object",
        "properties": {
          "permission_slug": { "type": "string" },
          "resource_type": { "type": "string" },
          "resource_id": { "type": "integer" }
        },
        "required": ["permission_slug","resource_type","resource_id"]
      },
      "InstancePermissionBatch": {
        "type": "object",
        "properties": {
          "permissions": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "slug": { "type": "string" },
                "resource_type": { "type": "string" },
                "resource_id": { "type": "integer" }
              },
              "required": ["slug","resource_type","resource_id"]
            }
          }
        },
        "required": ["permissions"]
      },
      "SuccessRole": { "type": "object", "properties": { "data": { "$ref": "#/components/schemas/Role" } } },
      "SuccessPermission": { "type": "object", "properties": { "data": { "$ref": "#/components/schemas/Permission" } } },
      "SuccessDataScope": { "type": "object", "properties": { "data": { "$ref": "#/components/schemas/DataScope" } } },
      "UserPermissionSummary": {
        "type": "object",
        "description": "用户权限概览（列表页）",
        "properties": {
          "user_id": { "type": "integer" },
          "user_name": { "type": "string", "nullable": true },
          "user_email": { "type": "string", "nullable": true },
          "roles": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": { "type": "integer" },
                "name": { "type": "string" },
                "slug": { "type": "string" },
                "enabled": { "type": "boolean" }
              }
            }
          },
          "stats": {
            "type": "object",
            "properties": {
              "total_roles": { "type": "integer", "description": "总角色数" },
              "enabled_roles": { "type": "integer", "description": "启用角色数" },
              "disabled_roles": { "type": "integer", "description": "禁用角色数" },
              "total_permissions": { "type": "integer", "description": "总权限数（角色+直接）" },
              "role_permissions": { "type": "integer", "description": "从角色继承的权限数" },
              "direct_permissions": { "type": "integer", "description": "直接分配的权限数" },
              "total_data_scopes": { "type": "integer", "description": "总数据范围数" },
              "role_data_scopes": { "type": "integer", "description": "从角色继承的数据范围数" },
              "direct_data_scopes": { "type": "integer", "description": "直接分配的数据范围数" }
            }
          },
          "has_direct_permissions": { "type": "boolean", "description": "是否有直接权限" },
          "has_direct_data_scopes": { "type": "boolean", "description": "是否有直接数据范围" },
          "has_disabled_roles": { "type": "boolean", "description": "是否有禁用的角色" }
        }
      },
      "PermissionWithSource": {
        "type": "object",
        "description": "带来源标注的权限",
        "allOf": [
          { "$ref": "#/components/schemas/Permission" },
          {
            "type": "object",
            "properties": {
              "is_instance_permission": { "type": "boolean", "description": "是否为实例权限" },
              "sources": {
                "type": "array",
                "description": "权限来源列表",
                "items": {
                  "type": "object",
                  "properties": {
                    "type": { "type": "string", "enum": ["role", "direct"], "description": "来源类型：role=角色继承，direct=直接分配" },
                    "role_id": { "type": "integer", "description": "角色ID（仅当type=role时）" },
                    "role_name": { "type": "string", "description": "角色名称（仅当type=role时）" },
                    "role_slug": { "type": "string", "description": "角色标识（仅当type=role时）" }
                  }
                }
              },
              "has_conflict": { "type": "boolean", "description": "是否有冲突（多个来源）" }
            }
          }
        ]
      },
      "DataScopeWithSource": {
        "type": "object",
        "description": "带来源标注的数据范围",
        "allOf": [
          { "$ref": "#/components/schemas/DataScope" },
          {
            "type": "object",
            "properties": {
              "sources": {
                "type": "array",
                "description": "数据范围来源列表",
                "items": {
                  "type": "object",
                  "properties": {
                    "type": { "type": "string", "enum": ["role", "direct"] },
                    "role_id": { "type": "integer" },
                    "role_name": { "type": "string" },
                    "role_slug": { "type": "string" }
                  }
                }
              },
              "has_conflict": { "type": "boolean" }
            }
          }
        ]
      },
      "UserPermissionDetail": {
        "type": "object",
        "description": "用户权限详情（详情页）",
        "properties": {
          "user_id": { "type": "integer" },
          "roles": {
            "type": "array",
            "description": "角色详细信息",
            "items": {
              "type": "object",
              "properties": {
                "id": { "type": "integer" },
                "name": { "type": "string" },
                "slug": { "type": "string" },
                "description": { "type": "string" },
                "enabled": { "type": "boolean" },
                "permissions": {
                  "type": "array",
                  "items": {
                    "allOf": [
                      { "$ref": "#/components/schemas/Permission" },
                      { "type": "object", "properties": { "is_instance_permission": { "type": "boolean" } } }
                    ]
                  }
                },
                "dataScopes": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/DataScope" }
                }
              }
            }
          },
          "directPermissions": {
            "type": "array",
            "description": "用户直接分配的权限",
            "items": {
              "allOf": [
                { "$ref": "#/components/schemas/Permission" },
                { "type": "object", "properties": { "is_instance_permission": { "type": "boolean" } } }
              ]
            }
          },
          "directDataScopes": {
            "type": "array",
            "description": "用户直接分配的数据范围",
            "items": { "$ref": "#/components/schemas/DataScope" }
          },
          "merged": {
            "type": "object",
            "description": "合并后的所有权限（去重+来源标注）",
            "properties": {
              "all_permissions": {
                "type": "array",
                "description": "所有基础权限（非实例权限）",
                "items": { "$ref": "#/components/schemas/PermissionWithSource" }
              },
              "instance_permissions": {
                "type": "object",
                "description": "实例权限（按资源类型分组）",
                "additionalProperties": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/PermissionWithSource" }
                }
              },
              "all_data_scopes": {
                "type": "array",
                "description": "所有数据范围",
                "items": { "$ref": "#/components/schemas/DataScopeWithSource" }
              },
              "stats": {
                "type": "object",
                "properties": {
                  "total_permissions": { "type": "integer", "description": "总权限数" },
                  "base_permissions": { "type": "integer", "description": "基础权限数" },
                  "instance_permissions": { "type": "integer", "description": "实例权限数" },
                  "total_data_scopes": { "type": "integer", "description": "总数据范围数" },
                  "from_roles": { "type": "integer", "description": "来自角色的数量" },
                  "from_direct": { "type": "integer", "description": "直接分配的数量" },
                  "conflicts": { "type": "integer", "description": "冲突数量（有多个来源的权限/数据范围）" }
                }
              }
            }
          }
        }
      }
    }
  },
  "security": [ { "bearerAuth": [] } ],
  "paths": {
    "/roles": {
      "get": {
        "tags": ["Roles"],
        "summary": "角色列表",
        "parameters": [
          { "name": "keyword", "in": "query", "schema": { "type": "string" } },
          { "name": "per_page", "in": "query", "schema": { "type": "integer", "minimum": 15, "maximum": 50 } },
          { "name": "guard_name", "in": "query", "schema": { "type": "string" } }
        ],
        "responses": { "200": { "description": "分页角色", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Pagination" } } } } }
      },
      "post": {
        "tags": ["Roles"],
        "summary": "创建角色",
        "requestBody": { "required": true, "content": { "application/json": { "schema": { "type": "object", "properties": { "name": { "type": "string" }, "slug": { "type": "string" }, "description": { "type": "string" }, "guard_name": { "type": "string", "default": "web" } }, "required": ["name","slug"] } } } },
        "responses": { "200": { "description": "角色", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/SuccessRole" } } } } }
      }
    },
    "/roles/{id}": {
      "get": { "tags": ["Roles"], "summary": "角色详情", "parameters": [ { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } } ], "responses": { "200": { "description": "角色", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/SuccessRole" } } } } } },
      "put": { "tags": ["Roles"], "summary": "更新角色", "parameters": [ { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } } ], "requestBody": { "required": true, "content": { "application/json": { "schema": { "type": "object", "properties": { "name": { "type": "string" }, "description": { "type": "string" }, "guard_name": { "type": "string" } } } } } }, "responses": { "200": { "description": "角色", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/SuccessRole" } } } } } },
      "delete": { "tags": ["Roles"], "summary": "删除角色", "parameters": [ { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } } ], "responses": { "200": { "description": "删除成功" } } }
    },
    "/roles/{id}/permissions": {
      "post": { "tags": ["Roles"], "summary": "分配权限到角色（批量/可替换）", "parameters": [ { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } } ], "requestBody": { "required": true, "content": { "application/json": { "schema": { "type": "object", "properties": { "permission_ids": { "type": "array", "items": { "type": "integer" } }, "replace": { "type": "boolean" } }, "required": ["permission_ids"] } } } }, "responses": { "200": { "description": "角色", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/SuccessRole" } } } } } },
      "delete": { "tags": ["Roles"], "summary": "撤销角色权限（批量）", "parameters": [ { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } } ], "requestBody": { "required": true, "content": { "application/json": { "schema": { "type": "object", "properties": { "permission_ids": { "type": "array", "items": { "type": "integer" } } }, "required": ["permission_ids"] } } } }, "responses": { "200": { "description": "角色" } } },
      "put": { "tags": ["Roles"], "summary": "同步角色权限（完全替换）", "parameters": [ { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } } ], "requestBody": { "required": true, "content": { "application/json": { "schema": { "type": "object", "properties": { "permission_ids": { "type": "array", "items": { "type": "integer" } } }, "required": ["permission_ids"] } } } }, "responses": { "200": { "description": "角色" } } }
    },
    "/roles/{id}/data-scopes": {
      "post": { "tags": ["Roles"], "summary": "分配数据范围到角色（批量/可替换）", "parameters": [ { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } } ], "requestBody": { "required": true, "content": { "application/json": { "schema": { "type": "object", "properties": { "data_scope_ids": { "type": "array", "items": { "type": "integer" } }, "replace": { "type": "boolean" }, "constraint": { "type": "string" } }, "required": ["data_scope_ids"] } } } }, "responses": { "200": { "description": "角色" } } },
      "delete": { "tags": ["Roles"], "summary": "撤销角色数据范围（批量）", "parameters": [ { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } } ], "requestBody": { "required": true, "content": { "application/json": { "schema": { "type": "object", "properties": { "data_scope_ids": { "type": "array", "items": { "type": "integer" } } }, "required": ["data_scope_ids"] } } } }, "responses": { "200": { "description": "角色" } } },
      "put": { "tags": ["Roles"], "summary": "同步角色数据范围（完全替换）", "parameters": [ { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } } ], "requestBody": { "required": true, "content": { "application/json": { "schema": { "type": "object", "properties": { "data_scope_ids": { "type": "array", "items": { "type": "integer" } }, "constraint": { "type": "string" } }, "required": ["data_scope_ids"] } } } }, "responses": { "200": { "description": "角色" } } }
    },
    "/roles/{id}/instance-permissions": {
      "post": { "tags": ["Roles"], "summary": "为角色分配实例权限（单个或批量）", "parameters": [ { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } } ], "requestBody": { "required": true, "content": { "application/json": { "schema": { "oneOf": [ { "$ref": "#/components/schemas/InstancePermissionSingle" }, { "$ref": "#/components/schemas/InstancePermissionBatch" } ] } } } }, "responses": { "200": { "description": "角色" } } },
      "delete": { "tags": ["Roles"], "summary": "撤销角色实例权限（批量）", "parameters": [ { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } } ], "requestBody": { "required": true, "content": { "application/json": { "schema": { "$ref": "#/components/schemas/InstancePermissionBatch" } } } }, "responses": { "200": { "description": "角色" } } }
    },

    "/permissions": {
      "get": { "tags": ["Permissions"], "summary": "权限列表（支持树形）", "parameters": [ { "name": "keyword", "in": "query", "schema": { "type": "string" } }, { "name": "resource", "in": "query", "schema": { "type": "string" } }, { "name": "action", "in": "query", "schema": { "type": "string" } }, { "name": "guard_name", "in": "query", "schema": { "type": "string" } }, { "name": "format", "in": "query", "schema": { "type": "string", "enum": ["list","tree"], "default": "list" } }, { "name": "per_page", "in": "query", "schema": { "type": "integer", "minimum": 15, "maximum": 50 } } ], "responses": { "200": { "description": "列表或树形", "content": { "application/json": { "schema": { "oneOf": [ { "$ref": "#/components/schemas/Pagination" }, { "type": "array", "items": { "type": "object" } } ] } } } } } },
      "post": { "tags": ["Permissions"], "summary": "创建权限", "requestBody": { "required": true, "content": { "application/json": { "schema": { "type": "object", "properties": { "name": { "type": "string" }, "slug": { "type": "string" }, "description": { "type": "string" }, "resource": { "type": "string" }, "action": { "type": "string" }, "guard_name": { "type": "string", "default": "web" }, "metadata": { "type": "object" } }, "required": ["name","slug"] } } } }, "responses": { "200": { "description": "权限", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/SuccessPermission" } } } } } }
    },
    "/permissions/{id}": {
      "get": { "tags": ["Permissions"], "summary": "权限详情", "parameters": [ { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } } ], "responses": { "200": { "description": "权限", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/SuccessPermission" } } } } } },
      "put": { "tags": ["Permissions"], "summary": "更新权限", "parameters": [ { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } } ], "requestBody": { "required": true, "content": { "application/json": { "schema": { "type": "object", "properties": { "name": { "type": "string" }, "slug": { "type": "string" }, "description": { "type": "string" }, "resource": { "type": "string" }, "action": { "type": "string" }, "guard_name": { "type": "string" }, "metadata": { "type": "object" } } } } } }, "responses": { "200": { "description": "权限" } } },
      "delete": { "tags": ["Permissions"], "summary": "删除权限", "parameters": [ { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } } ], "requestBody": { "required": false }, "responses": { "200": { "description": "删除成功" } } }
    },
    "/permissions/batch": {
      "post": { "tags": ["Permissions"], "summary": "批量创建权限", "requestBody": { "required": true, "content": { "application/json": { "schema": { "type": "object", "properties": { "resource": { "type": "string" }, "actions": { "type": "array", "items": { "type": "string" } }, "guard_name": { "type": "string", "default": "web" } }, "required": ["resource","actions"] } } } }, "responses": { "200": { "description": "权限数组", "content": { "application/json": { "schema": { "type": "array", "items": { "$ref": "#/components/schemas/Permission" } } } } } } }
    },
    "/permissions/instance": {
      "post": { "tags": ["Permissions"], "summary": "创建实例权限", "requestBody": { "required": true, "content": { "application/json": { "schema": { "$ref": "#/components/schemas/InstancePermissionSingle" } } } }, "responses": { "200": { "description": "实例权限", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/SuccessPermission" } } } } } }
    },

    "/data-scopes": {
      "get": { "tags": ["DataScopes"], "summary": "数据范围列表", "parameters": [ { "name": "keyword", "in": "query", "schema": { "type": "string" } }, { "name": "type", "in": "query", "schema": { "type": "string" } }, { "name": "per_page", "in": "query", "schema": { "type": "integer", "minimum": 15, "maximum": 100 } } ], "responses": { "200": { "description": "分页数据范围", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Pagination" } } } } } },
      "post": { "tags": ["DataScopes"], "summary": "创建数据范围", "requestBody": { "required": true, "content": { "application/json": { "schema": { "type": "object", "properties": { "name": { "type": "string" }, "description": { "type": "string" }, "type": { "type": "string" }, "config": { "type": "object" } }, "required": ["name","type"] } } } }, "responses": { "200": { "description": "数据范围", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/SuccessDataScope" } } } } } }
    },
    "/data-scopes/{id}": {
      "get": { "tags": ["DataScopes"], "summary": "数据范围详情", "parameters": [ { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } } ], "responses": { "200": { "description": "数据范围", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/SuccessDataScope" } } } } } },
      "put": { "tags": ["DataScopes"], "summary": "更新数据范围", "parameters": [ { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } } ], "requestBody": { "required": true, "content": { "application/json": { "schema": { "type": "object", "properties": { "name": { "type": "string" }, "description": { "type": "string" }, "type": { "type": "string" }, "config": { "type": "object" } } } } } }, "responses": { "200": { "description": "数据范围" } } },
      "delete": { "tags": ["DataScopes"], "summary": "删除数据范围", "parameters": [ { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } } ], "responses": { "200": { "description": "删除成功" } } }
    },

    "/users/{user_id}/roles": {
