{
    "name": "shiwuhao/laravel-rbac",
    "description": "A modern Laravel 12+ RBAC package with data permissions and auto-sync features.",
    "keywords": [
        "laravel",
        "rbac",
        "permissions",
        "roles",
        "authorization",
        "access-control",
        "data-scope"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "shiwuhao",
            "email": "admin@shiwuhao.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/auth": "^12.0",
        "illuminate/console": "^12.0",
        "illuminate/container": "^12.0",
        "illuminate/contracts": "^12.0",
        "illuminate/database": "^12.0",
        "illuminate/http": "^12.0",
        "illuminate/routing": "^12.0",
        "illuminate/support": "^12.0"
    },
    "require-dev": {
        "orchestra/testbench": "^10.0",
        "phpunit/phpunit": "^11.0",
        "laravel/pint": "^1.17",
        "nunomaduro/collision": "^8.0",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Rbac\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Rbac\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Rbac\\RbacServiceProvider"
            ],
            "aliases": {
                "Rbac": "Rbac\\Facades\\Rbac"
            }
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}